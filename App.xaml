<Application x:Class="CalculatorWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CalculatorWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="numberBackground" Color="#444444"/>
        <SolidColorBrush x:Key="operationBackground" Color="Orange"/>
        <SolidColorBrush x:Key="lightForeground" Color="White"/>
        <SolidColorBrush x:Key="darkForeground" Color="Black"/>
        
        <Style TargetType="Button" x:Key="buttonStyle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    </Application.Resources>
</Application>
